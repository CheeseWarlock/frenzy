<h1>Restaurants</h1>
<% @locations.each do |l, r| %>
	<h3><%= l %><%= link_to 'Add', new_restaurant_path(location: l), :class => "button" %></h3>
	<ul>
		<% r.each do |s| %>
			<li>
				<%= link_to s.name, restaurant_path(s) %>
			</li>
		<% end %>
	</ul>
<% end %>
<%= link_to 'Add Restaurant', new_restaurant_path, :class => "button" %>
